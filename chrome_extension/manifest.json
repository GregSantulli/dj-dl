{
  "name": "youtube-dl",
  "version": "1.0",
  "description": "Send the video id of a youtube video to a specified endpoint",
  "permissions": ["contextMenus", "tabs", "activeTab", "https://*/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://open.spotify.com/*"],
      "js": [
        "jquery.js",
        "arrive.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "manifest_version": 2,
  "icons": {
    "128": "youtube-dl-icon-128.png"
  }
}
